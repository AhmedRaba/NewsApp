<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NewsApp" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="android:statusBarColor">@color/green</item>

    </style>

    <style name="Theme.NewsApp" parent="Base.Theme.NewsApp" />


    <style name="HeaderTextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AppBarTextView">
        <item name="android:fontFamily">@font/exo_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="NewsTitleTextView">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="CategoryTextView">
        <item name="android:fontFamily">@font/exo_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CustomSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:spinnerMode">dropdown</item>
        <item name="strokeColor">@color/green</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:textColor">@color/green</item>
    </style>

</resources>